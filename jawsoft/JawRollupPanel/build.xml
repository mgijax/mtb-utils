<!--
===============================================================================
                        Target Test
===============================================================================

Test the MTB GUI Library.
-->

<target name="test" depends="keystore"
        description="Test the GUI library.">
        
    <delete>
        <fileset dir="${tests.home}" includes="*.class"/>
        <fileset dir="${tests.home}" includes="*.jar"/>
    </delete>
    
    <javac srcdir="${tests.home}"
          destdir="${tests.home}"
            debug="${compile.debug}"
      deprecation="${compile.deprecation}"
         optimize="${compile.optimize}">
        <classpath>
            <pathelement location="${dist.home}/${dist.jar.name}"/>
            <pathelement path="${compile.classpath}"/>
            <pathelement location="${looks.jar}"/>
        </classpath>
    </javac>
    
    <jar jarfile="${tests.home}/JawRollupPanelTest.jar" 
         basedir="${tests.home}">
         <manifest>
            <attribute name="Built-By" value="${user.name}"/>
            <attribute name="Class-Path" value="JawRollupPanel.jar"/>
            <attribute name="Main-Class" value="JawRollupPanelTest"/>
        </manifest>
    </jar>
         
    <signjar jar="${tests.home}/JawRollupPanelTest.jar" 
             alias="MooseJAW" 
             storepass="public" 
             keystore="${tests.home}/tempKeystore"/>

    <copy file="${dist.home}/${dist.jar.name}"
          todir="${tests.home}"
          overwrite="true"/>

    <signjar jar="${tests.home}/${dist.jar.name}" 
             alias="MooseJAW" 
             storepass="public" 
             keystore="${tests.home}/tempKeystore"/>

    <java jar="${tests.home}/JawRollupPanelTest.jar"
          fork="true"
          dir="${tests.home}"
          failonerror="true"
          maxmemory="128m">
        <classpath>
            <pathelement location="${dist.home}/${dist.jar.name}"/>
            <pathelement path="${compile.classpath}"/>
            <pathelement location="${looks.jar}"/>
            <pathelement location="JawLayout.jar"/>
        </classpath>
    </java>
          
              
